<div class="middle">
<h2>Users Table</h2>
<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Author Name</th>
    </tr>
  </thead>
  <tbody>
    <% books.forEach(book=> { %>
      <tr>
        
        <td>
          <a href="<%= `/books/${book._id}` %>">
            <%= book._id %>
          </a>
        </td>
        <td>
          <%= book.Name %>
        </td>
        <td>
          <%= book.AuthorName %>
        </td>
        <td>
            <a href="<%= `books/${book._id}/update?_method=UPDATE` %>"
              onclick="return confirm('Are you sure you want to update this record?')">Edit</a>
          </td>
        <td>
          <a href="<%= `books/${book._id}/delete?_method=DELETE` %>"
            onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
        </td>
      </tr>
      <% }); %>
  </tbody>
</table>
</div>